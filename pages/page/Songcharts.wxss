/* pages/page/Songcharts.wxss */
.songcharts{
  width: 100%;
}
.scroll{
  height: 100vh;
}
.navclass{
  background-color: rgba(0,0,0,0);
}
.image image{
 width: 100%;
 height: 200px;
 display: block;
 margin: 0 auto;
 border-radius: 10px;
}
.fathertext{
  width: 88%;
  margin: 0 auto;
  position: relative;
  top: -10px;
  background-color: #ffffff;
  border-radius: 10px;
  box-shadow: 0 0 5px 4px #9c9c9c30;
}
.text{
  font-size: 13px;
  padding-top: 8px;
  margin: 0 8px;
  line-height: 20px;
  color: #726d6d;
}
.fathertags{
  display: flex;
  flex-direction: row-reverse;
}
.tags{
  margin-right: 10px;
  font-size: 12px;
  background-color: #dee1e6;
  border-radius: 10%;
}
.sub{
  padding:10px 0;
  display: flex;
  justify-content: space-around;
}
.sub image{
  width: 20px;
  height: 20px;
}
.sub .text{
  padding-top: 0px;
  vertical-align: top;
}
.listfather{
  padding-bottom: 20px;
}
.list{
  display: flex;
  margin-top: 8px;
}
.listnum{
  width: 40rpx;
  text-align: center;
  align-self: center;
  margin: 0 10rpx;
}
.songdata{
  font-size: 16px;
  line-height: 10px;
}
.singer{
  display: flex;
  font-size: 10px;
  color: #726d6d;
  line-height: 10px;
}